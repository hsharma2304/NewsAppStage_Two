<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="first_preferencescreen"

    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <CheckBoxPreference
        android:key="sports"
        android:title="Sports News" />

    <PreferenceScreen
        android:key="second_preference"
        android:title="Technical News">

        <CheckBoxPreference
            android:key="technical"
            android:title="Technical News" />

    </PreferenceScreen>

    <PreferenceScreen
        android:key="third_preference"
        android:title="Weather News">

        <CheckBoxPreference
            android:key="Weather"
            android:title="Weather News" />

    </PreferenceScreen>

    <PreferenceScreen
        android:key="forth_preference"
        android:title="Movie News">

        <CheckBoxPreference
            android:key="Movie"
            android:title="Movie News" />

    </PreferenceScreen>

</PreferenceScreen>